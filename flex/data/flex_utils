import zipfile
from sultan.api import Sultan
from tqdm import tqdm
# Import hashlib library (md5 method is part of it)
from hashlib import md5
import os


MNIST_URL = "http://www.itl.nist.gov/iaui/vip/cs_links/EMNIST/matlab.zip"
MNIST_MD5 = "1bbb49fdf3462bb70c240eac93fff0e4"


def check_hash(filename: str, md5_hash: str) -> bool:
    with open(filename, 'rb') as file_to_check:
        data = file_to_check.read()
        md5_returned = md5(data).hexdigest()
    return md5_returned == md5_hash


def check_file_exists(filename: str) -> bool:
    return os.path.isfile(filename)


def check_dir_exists(filename: str) -> bool:
    return os.path.exists(filename)


def extract_zip(filename: str):
    with zipfile.ZipFile(filename, "r") as ref:
        ref.extractall()
        return ref.namelist()


def download_file(url: str, filename: str = None, out_dir: str = "."):
    additional_args = ()
    if filename:
        out_path = os.path.join(out_dir, filename)
        additional_args = ("-O", out_path)
    with Sultan.load() as s:
        result = s.wget(url, "-q", "--show-progress", *additional_args).run(streaming=True)

        def generator():
            while True:
                complete = result.is_complete
                if complete:
                    break
                yield from result.stderr

        pbar = tqdm(generator())
        for i in pbar:
            pbar.set_description(i)


def download_dataset(url, filename, out_dir, md5_hash, extract=False):
    full_path = os.path.join(out_dir, filename)
    check_dir_exists(out_dir)
    trials = 3
    i = 0
    while not (check_file_exists(full_path) and check_hash(full_path, md5_hash)):
        download_file(url, filename, out_dir)
        i += 1
        if i > trials:
            raise ValueError("Either we are unable the download the file or the provided md5hash is not correct.")

    if not extract:
        return full_path
    extracted_files = extract_zip(full_path)
    return [os.path.join(out_dir, i) for i in extracted_files]
